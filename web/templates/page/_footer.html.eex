<ul class="list-group">
  <li class="list-group-item todos-footer">
    <div class="row">
      <div class="col-xs-6 todos-footer-items-left">
        <small><span class="todos-footer-stat"><%= ExTodo.TodoView.items_left_count(@todos) %></span> item(s) left</small>
      </div>
      <div class="col-xs-6 todos-footer-items-clear">
        <small class="todos-footer-clear <%= if ExTodo.TodoView.has_completed?(@todos), do: "", else: "disabled" %>">Clear Completed</small>
      </div>
    </div>
  </li>
</ul>